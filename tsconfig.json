{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "build",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "ES2015",
    "paths": {
      "@containers/*": ["src/infra/containers/*"],
      "@controllers/*": ["src/infra/controllers/*"],
      "@db/*": ["src/db/*"],
      "@domain/*": ["src/domain/*"],
      "@dtos/*": ["src/app/dtos/*"],
      "@middlewares/*": ["src/infra/middlewares/*"],
      "@models/*": ["src/infra/models/*"],
      "@repositories/*": ["src/infra/repositories/*"],
      "@routes/*": ["src/infra/routes/*"],
      "@services/*": ["src/infra/services/*"],
      "@useCases/*": ["src/app/useCases/*"]
    }
  },
  "include": ["src/**/*", "build.ts"],
  "exclude": ["node_modules"]
}
